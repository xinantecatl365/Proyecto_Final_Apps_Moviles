<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Proyecto_Final" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_dark</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Proyecto_Final.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Proyecto_Final.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Proyecto_Final.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    
    <style name="Widget.ProyectoFinal.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/TextAppearance.Proyecto_Final.TextInputLayout.HintText</item>
        <item name="hintTextColor">@color/primary_text</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="boxStrokeColor">@color/primary_dark</item>
    </style>

    <style name="TextAppearance.Proyecto_Final.TextInputLayout.HintText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>


</resources>